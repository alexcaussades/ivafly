{
  "name": "ivafly",
  "version": "1.1.6",
  "description": "",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron-forge start",
    "package": "npm install && npm run build && electron-packager .",
    "make": "electron-forge make",
    "dist": "electron-builder",
    "build": "electron-packager .",
    "pack": "electron-builder --dir",
    "app:build": "electron-builder build"
  },
  "build": {
    "productName": "Ivao-Fly",
    "icon": "app/static/icon.png",
    "linux": {
      "category": "Streaming"
    }
  },
  "author": "Alexandre Caussades <alexcaussades@gmail.com>",
  "bugs": {
    "url": "https://github.com/alexcaussades/ivafly/issues"
  },
  "repository": "https://github.com/alexcaussades/ivafly",
  "license": "MIT",
  "dependencies": {
    "@popperjs/core": "^2.9.2",
    "axios": "^0.21.1",
    "bootstrap": "^5.0.1",
    "file-system": "^2.2.2",
    "jquery": "^3.6.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.57",
    "@electron-forge/maker-deb": "^6.0.0-beta.57",
    "@electron-forge/maker-rpm": "^6.0.0-beta.57",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.57",
    "@electron-forge/maker-zip": "^6.0.0-beta.57",
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7",
    "electron-json-storage": "^4.5.0",
    "electron-packager": "^15.2.0",
    "electron-store": "^8.0.0",
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ivafly"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "postinstall": "electron-builder install-app-deps"
}
